{
  "extends": [
    "config:base",
    ":dependencyDashboard"
  ],
  "packageRules": [
    {
      "matchPackagePatterns": ["*"],
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "managers": ["gradle"],
      "packagePatterns": ["^com.android.tools.build"],
      "enabled": false
    },
    {
      "managers": ["gradle"],
      "packagePatterns": ["^androidx.activity"],
      "enabled": false
    }
  ]
}
